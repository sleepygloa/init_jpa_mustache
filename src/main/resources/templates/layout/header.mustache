a {
  color: inherit;
  text-decoration: none;
}
/*라이브러리*/
html,body {
  overflow-x : hidden;
}
.con {
  margin: 0 auto;
}
.row::after {
  content:"";
  display: block;
  clear: both;
}
.cell {
  float: left;
}
.img-box img {
  display: block;
  width: 100%;
}

/*커스텀*/

.con {
  max-width: 1200px;
}

/*로고*/
.logo-bar {
  margin-top: 10px;
  text-align: center;
  position: relative;
}

/*상단 메뉴 바*/
.top-menu-bar {
  margin-top: 10px;
}
.top-menu-bar .top-menu-box-1 > ul > li {
  width:calc(100%/7);
}
@media (max-width:800px) {
  .top-menu-bar {
    display: none;
  }
}
.top-menu-bar .top-menu-box-1 ul > li > a {
  display: block;
  text-align: center;
  font-weight: bold;
  white-space: nowrap;
  position: relative;
}
.top-menu-bar .top-menu-box-1 ul > li:hover > a {
  color: pink;
  text-decoration: underline;
}
.top-menu-bar .top-menu-box-1 ul > li > a::before, .top-menu-bar .top-menu-box-1 ul > li:last-child > a::after {
  content:"";
  position: absolute;
  width: 2px;
  height: 13px;
  top: 50%;
  transform: translateY(-50%);
  background-color: black;
}
.top-menu-bar .top-menu-box-1 ul > li > a::before {
  left: 0;
}
.top-menu-bar .top-menu-box-1 ul > li:last-child > a::after {
  right: 0;
}

/*사이드 메뉴 바*/
